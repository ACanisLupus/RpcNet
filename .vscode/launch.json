    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch port mapper",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/PortMapperTestServer",
            "args": [],
            "cwd": "${workspaceFolder}/bin/Debug",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Launch test client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/TestClient.dll",
            "args": [],
            "cwd": "${workspaceFolder}/bin/Debug",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch test server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/TestServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/bin/Debug",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
